@model SurveyForm.Data.ApplicationUser

<div class="modal fade" id="specific-user-modal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.FirstName @Model.LastName</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pt-5 pb-5">
                <div class="row">
                    <div class="col-md-4 text-end">
                        <p>Role</p>
                        <p>Email</p>
                        <p>Last logged in</p>
                        <p>Created date</p>
                    </div>
                    <div class="col-md-8">
                        <p><strong>- @Model.RoleName</strong></p>
                        <p><strong>- @Model.Email</strong></p>
                        <p><strong>- @Model.LastLoggedIn</strong></p>
                        <p><strong>- @Model.CreatedDate</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
