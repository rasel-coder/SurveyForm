@model SurveyForm.ViewModels.RegisterViewModel

<style>
    .btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
        box-shadow: none;
    }
    .color-gray {
        color: #b6b6b6;
    }
</style>

@{
    Layout = "~/Areas/Accounts/Views/Shared/_LayoutAccount.cshtml";
}

<div class="row m-0">
    <div class="col-md-7">
        <div style="padding: 40px 120px;">
            <h2>THE APP</h2>
            <div class="p-5">
                <p class="m-0 color-gray">Start your journey</p>
                <h3 class="mb-5">Sign in to The app</h3>
                <form class="" asp-action="Register" asp-controller="Account" asp-area="Accounts" method="post">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-control mb-3">
                                @Html.LabelFor(x => x.FirstName, new { @class = "form-label m-0 color-gray" })
                                @Html.EditorFor(x => x.FirstName, new { htmlAttributes = new { @class = "form-control border-0 p-0 text-black", placeholder = "John" } })
                                @Html.ValidationMessageFor(x => x.FirstName, "", new { @class="text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-control mb-3">
                                @Html.LabelFor(x => x.LastName, new { @class = "form-label m-0 color-gray" })
                                @Html.EditorFor(x => x.LastName, new { htmlAttributes = new { @class = "form-control border-0 p-0 text-black", placeholder = "Abrham" } })
                                @Html.ValidationMessageFor(x => x.LastName, "", new { @class="text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-control mb-3 d-flex justify-content-between align-content-center">
                        <div class="w-100">
                            @Html.LabelFor(x => x.Email, new { @class = "form-label m-0 color-gray" })
                            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control border-0 p-0 text-black", placeholder = "john@yahoo.com", type = "email" } })
                            @Html.ValidationMessageFor(x => x.Email, "", new { @class="text-danger" })
                        </div>                        
                        <i class='bx bxs-envelope p-1 d-flex align-items-center color-gray'></i>
                    </div>
                    <div class="form-control mb-3 d-flex justify-content-between align-content-center">
                        <div class="w-100">
                            @Html.LabelFor(x => x.Password, new { @class = "form-label m-0 color-gray" })
                            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control border-0 p-0 text-black", placeholder = "******", type = "password" } })
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class="text-danger" })
                        </div>
                        <i class="toggle-password fa fa-fw fa-eye-slash p-1 d-flex align-items-center color-gray"></i>
                    </div>
                    <div class="form-control mb-3 d-flex justify-content-between align-content-center">
                        <div class="w-100">
                            @Html.LabelFor(x => x.ConfirmPassword, new { @class = "form-label m-0 color-gray" })
                            @Html.EditorFor(x => x.ConfirmPassword, new { htmlAttributes = new { @class = "form-control border-0 p-0 text-black", placeholder = "******", type = "password" } })
                            @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class="text-danger" })
                        </div>
                        <i class="toggle-password fa fa-fw fa-eye-slash p-1 d-flex align-items-center color-gray"></i>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Sign in</button>
                </form>
            </div>
            <p class="color-gray">Already have an account? <a asp-action="Login" asp-controller="Account" asp-area="Accounts">Login</a></p>
            <a class="btn btn-sm btn-secondary mt-2" asp-area="" asp-controller="Home" asp-action="Index">Back to home</a></>
        </div>
    </div>
    <div class="col-md-5">
        <img src="~/images/account-banner.jpg" class="w-100" style="height: 100vh;" />
    </div>
</div>